@model Author

@{
	ViewData["Title"] = "Detalhar Autor";
}

<h1>Detalhar</h1>

<div>
	<h4>Livro: </h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Nome):
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Nome)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DataNascimento):
		</dt>
		<dd class="col-sm-10">
			@Model.DataNascimento.ToShortDateString()
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.CPF):
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.CPF)
		</dd>
		<dt class="col-sm-2">
			Quantidade de Livros registrados:
		</dt>
		<dd class="col-sm-10">
			@TempData["QtdLivros"]
		</dd>
	</dl>
</div>
<div>
	<a class="btn btn-primary text-center" asp-action="Edit" asp-route-id="@Model?.Id">Alterar</a>
	<a class="btn btn-secondary text-center" asp-action="Index">Voltar</a>
</div>